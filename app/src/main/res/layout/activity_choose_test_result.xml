<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".activities.ChooseTestResultActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sen_bold"
            android:gravity="center"
            android:text="Choose the test result"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/result_one"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:elevation="10dp"
                android:src="@drawable/test1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/shape_circle"
                android:layout_alignBottom="@+id/result_one"
                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/result_two"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:elevation="10dp"
                android:src="@drawable/test1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/shape_circle_unselected"
                android:layout_alignBottom="@+id/result_two"
                />


        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:gravity="center">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/result_three"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:elevation="10dp"
                android:src="@drawable/test3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/shape_circle_unselected"
                android:layout_alignBottom="@+id/result_three"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/result_four"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:elevation="10dp"
                android:src="@drawable/test4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/shape_circle_unselected"
                android:layout_alignBottom="@+id/result_four"
                />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="18dp"
        >




        <TextView
            android:id="@+id/textViewBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sen_regular"
            android:text="Back"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:alpha="0.7"
            android:onClick="back"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:elevation="5dp"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/text_to_Next"
            android:layout_width="80dp"
            android:layout_height="30dp"

            android:background="@drawable/login_shape"
            android:text="Next"
            android:elevation="5dp"
            android:textSize="14sp"
            android:onClick="nextToChooseResult"
            android:layout_gravity="end"
            android:fontFamily="@font/sen_regular"
            android:gravity="center"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textViewtoBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sen_regular"
            android:text="Back"
            android:onClick="back"
            android:elevation="5dp"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:alpha="0.7"
            />

        <TextView
            android:id="@+id/textNext"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/login_shape"
            android:text="Next"
            android:onClick="nextToChooseResult"
            android:gravity="center"
            android:textSize="14sp"
            android:elevation="5dp"
            android:fontFamily="@font/sen_regular"
            android:textColor="@android:color/white"
            />

    </LinearLayout>


    </LinearLayout>

