<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".activities.HealthDetailsActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="back"
            android:visibility="gone"
            android:background="@drawable/back_white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sen_bold"
            android:gravity="center"
            android:text="Health Details"
            android:textColor="@android:color/white"
            android:textSize="18sp" />


    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#C70000"
        android:text="Health Details"
        android:visibility="gone"
        android:gravity="start|center_vertical"
        android:fontFamily="@font/sen_regular"
        android:layout_marginBottom="24dp"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="24dp"
        android:layout_weight="1">


        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp">

            <ImageView
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:src="@drawable/sore"/>




            <LinearLayout
                android:background="@drawable/button_selected"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical|end"
                android:layout_weight="0.25"
                android:paddingEnd="4dp"
                android:paddingRight="4dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="SORE THROAT"
                    android:textSize="8sp"
                    android:paddingStart="4dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:paddingLeft="4dp"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selected"
                    android:checked="true"

                    />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp">

            <ImageView
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/breathlessness"/>


            <LinearLayout
                android:background="@drawable/button_unselected"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical|end"
                android:layout_weight="0.25"
                android:paddingEnd="4dp"
                android:paddingRight="4dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="BREATHLESSNESS"
                    android:textSize="8sp"
                    android:paddingStart="4dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:paddingLeft="4dp"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:button="@drawable/checkbox_selected"
                    android:checked="false"
                    android:paddingTop="4dp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/fever"/>


            <LinearLayout
                android:background="@drawable/button_unselected"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical|end"
                android:layout_weight="0.25"
                android:paddingEnd="4dp"
                android:paddingRight="4dp"
                tools:ignore="RtlSymmetry">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="FEVER"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingStart="4dp"
                    android:textColor="@color/colorAccent"
                    android:paddingLeft="4dp"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:button="@drawable/checkbox_selected"
                    android:checked="false" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="24dp"
        android:layout_margin="16dp"
        android:layout_weight="1">


        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp">

            <ImageView
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/headache"/>


            <LinearLayout
                android:background="@drawable/button_selected"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical|end"
                android:layout_weight="0.25"
                android:paddingEnd="4dp"
                android:paddingRight="4dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingStart="4dp"
                    android:paddingLeft="4dp"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp"
                    android:text="HEADACHE"
                    android:textColor="@android:color/white"
                    android:textSize="8sp"
                    />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selected"
                    android:checked="true"

                    />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp">

            <ImageView
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/diarrhea"/>


            <LinearLayout
                android:background="@drawable/button_unselected"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical|end"
                android:layout_weight="0.25"
                android:paddingEnd="4dp"
                android:paddingRight="4dp"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="DIARRHEA"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingStart="4dp"
                    android:textColor="@color/colorAccent"
                    android:paddingLeft="4dp"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:button="@drawable/checkbox_selected"
                    android:checked="false"
                    />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/tasteless"/>


            <LinearLayout
                android:background="@drawable/button_selected"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical|end"
                android:layout_weight="0.25"
                android:paddingEnd="4dp"
                android:paddingRight="4dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="TASTELESS"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingStart="4dp"
                    android:textColor="@android:color/white"
                    android:paddingLeft="4dp"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selected"
                    android:checked="true"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="24dp"
        android:layout_margin="16dp"
        android:layout_weight="1">


        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp">

            <ImageView
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/not_smell"/>


            <LinearLayout
                android:background="@drawable/button_unselected"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical|end"
                android:layout_weight="0.25"
                android:paddingEnd="4dp"
                android:paddingRight="4dp"
                tools:ignore="RtlSymmetry">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="NOT SMELL"
                    android:textSize="10sp"
                    android:paddingStart="4dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:paddingLeft="4dp"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:button="@drawable/checkbox_selected"
                    android:checked="false"
                    />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp">

            <ImageView
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/cough"/>


            <LinearLayout
                android:background="@drawable/button_unselected"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical|end"
                android:layout_weight="0.25"
                android:paddingEnd="4dp"
                android:paddingRight="4dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="COUGH"
                    android:textSize="10sp"
                    android:paddingStart="4dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:paddingLeft="4dp"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:button="@drawable/checkbox_selected"
                    android:checked="false"
                    />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/weak"/>


            <LinearLayout
                android:background="@drawable/button_unselected"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical|end"
                android:layout_weight="0.25"
                android:paddingEnd="4dp"
                android:paddingRight="4dp"
                tools:ignore="RtlSymmetry">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="WEAK"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingStart="4dp"
                    android:textColor="@color/colorAccent"
                    android:paddingLeft="4dp"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:button="@drawable/checkbox_selected"
                    android:checked="false"
                    android:paddingTop="4dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:layout_weight="1"
        android:weightSum="3">


        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp">

            <ImageView
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/vomit"/>


            <LinearLayout
                android:background="@drawable/button_unselected"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical|end"
                android:layout_weight="0.25"
                android:paddingEnd="4dp"
                android:paddingRight="4dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingStart="4dp"
                    android:paddingLeft="4dp"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp"
                    android:text="VOMIT"
                    android:textColor="@color/colorAccent"
                    android:textSize="10sp"
                    />


                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:button="@drawable/checkbox_selected"
                    android:checked="false"
                    android:paddingTop="4dp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1">

            <ImageView android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/runny_nose"/>


            <LinearLayout
                android:background="@drawable/button_unselected"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical|end"
                android:layout_weight="0.25"
                android:paddingEnd="4dp"
                android:paddingRight="4dp"
                tools:ignore="RtlSymmetry">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="RUNNY NOSE"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingStart="4dp"
                    android:textColor="@color/colorAccent"
                    android:paddingLeft="4dp"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp" />


                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:button="@drawable/checkbox_selected"
                    android:checked="false"
                    android:paddingTop="4dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="18dp"
    >




    <TextView
        android:id="@+id/textViewBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sen_regular"
        android:text="Back"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:alpha="0.7"
        android:onClick="back"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
      />

    <TextView
        android:id="@+id/text_to_Next"
        android:layout_width="80dp"
        android:layout_height="30dp"

        android:background="@drawable/login_shape"
        android:text="Next"
        android:elevation="5dp"
        android:textSize="14sp"
        android:onClick="nextToChooseResult"
        android:layout_gravity="end"
        android:fontFamily="@font/sen_regular"
        android:gravity="center"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
 />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textViewtoBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sen_regular"
            android:text="Back"
            android:onClick="back"
            android:elevation="5dp"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:alpha="0.7"
            />

        <TextView
            android:id="@+id/textNext"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/login_shape"
            android:text="Next"
            android:onClick="nextToChooseResult"
            android:gravity="center"
            android:textSize="14sp"
            android:elevation="5dp"
            android:fontFamily="@font/sen_regular"
            android:textColor="@android:color/white"
            />

    </LinearLayout>

</LinearLayout>