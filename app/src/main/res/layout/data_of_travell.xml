<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:padding="16dp"
    android:background="@drawable/background_dialog"
    android:layout_height="wrap_content"
    >


    <ImageView
        android:id="@+id/close_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_close"
        android:layout_marginBottom="16dp"
        android:layout_gravity="start"
        android:elevation="10dp"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Passport Number "
        android:fontFamily="@font/sen_bold"
        android:textSize="15sp"
        android:alpha="0.8"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
   />

    <EditText
        android:id="@+id/editTextPassportNo"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:ems="10"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_background"
        android:inputType="number"
        android:layout_marginLeft="8dp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:layout_marginStart="8dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Flight Number "
        android:fontFamily="@font/sen_bold"
        android:textSize="15sp"
        android:alpha="0.8"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorBlack"
        android:layout_marginStart="8dp" />

    <EditText
        android:id="@+id/editTextFlateNo"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:ems="10"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/edit_text_background"
        android:inputType="number"
        android:layout_marginStart="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Country Of Departure "
        android:fontFamily="@font/sen_bold"
        android:textSize="15sp"
        android:alpha="0.8"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorBlack"
        android:layout_marginStart="8dp" />

    <EditText
        android:id="@+id/editTextCountryOfDeparture"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:ems="10"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Country Of Arrival "
        android:fontFamily="@font/sen_bold"
        android:textSize="15sp"
        android:alpha="0.8"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:ems="10"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/nextBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Next"
       android:layout_marginHorizontal="80dp"
        android:padding="4dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/gender_selected"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:elevation="5dp"
        android:fontFamily="@font/sen_regular"
        />


</LinearLayout>